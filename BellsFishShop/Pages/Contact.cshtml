@page
@model BellsFishShop.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<div class="container MainContent Spacer">
    <div class="row">
        <div class="col-md">
            <h2>Contact</h2>
            <p>
                Please contact us with your enquiry using the form below or give us a ring on the number at the top of this page.
            </p>
        </div>
    </div>

    <hr />

    @if (@Model.FormSubmitted != true)
    {
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg">
                    <h3>Your Contact Details</h3>

                    <div class="form-group row">
                        <label asp-for="Contact.Name" class="col-md-4 col-form-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Contact.Name" class="form-control" />
                            <span asp-validation-for="Contact.Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Contact.Email" class="col-md-4 col-form-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Contact.Email" class="form-control" />
                            <span asp-validation-for="Contact.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Contact.Telephone" class="col-md-4 col-form-label"></label>
                        <div class="col-md-8">
                            <input asp-for="Contact.Telephone" class="form-control" />
                            <span asp-validation-for="Contact.Telephone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="col-lg">
                    <h3>Your Enquiry</h3>

                    <div class="form-group row">
                        <label asp-for="Contact.Enquiry" class="col-md-4 col-form-label"></label>
                        <div class="col-md-8">
                            <textarea asp-for="Contact.Enquiry" class="form-control"></textarea>
                            <span asp-validation-for="Contact.Enquiry" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md d-md-block d-sm-none">

                </div>
                <div class="col-md-3">
                    <input type="hidden" name="Contact.Outlet" class="form-control" value="0" />
                    <button type="submit" class="btn btn-primary btn-block">Send Enquiry</button>
                </div>
                <div class="col-md d-md-block d-sm-none">

                </div>
            </div>

            <hr class="Divider" />
        </form>

    }
    else
    {
        if (@Model.EmailSent == true)
        {
            <div class="row Spacer">
                <div class="col-md text-center">
                    <div class="alert alert-success" role="alert">
                        <h4 class="alert-heading">Thank you!</h4>
                        <p>
                            Thank you for your message.
                        </p>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="row Spacer">
                <div class="col-md text-center">
                    <div class="alert alert-danger" role="alert">
                        <h4 class="alert-heading">Sorry there was a problem...</h4>
                        <p>
                            Thank you for your message but unfortunately there was an error and your message could not be sent.
                        </p>
                        <p>
                            Please try to send your message again and if the error persists please <a href="anne@authoranne.co.uk?subject=Website Enquiry (Error 01)">click here</a> to send an email using your computer email programme instead or send an email to <a href="anne@authoranne.co.uk?subject=Website Enquiry (Error 01)">anne@authoranne.co.uk</a>
                        </p>
                        <p>
                            @Html.ValidationSummary()
                        </p>
                    </div>
                </div>
            </div>
        }
    }
</div>