@page "{id:int?}"
@model BellsFishShop.Pages.MenuItemData.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    <div class="col-md" id="MenuItemList">
        <table class="table table-striped table-dark sortable" id="MenuItemListTable" data-id="@Model.MenuItem[0].MenuCategoryID">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.MenuItem[0].Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MenuItem[0].TitleExtra)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MenuItem[0].Price)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MenuItem)
                {
                    <tr draggable="true" data-id="@item.MenuItemID">
                        <td>
                            <button class="btn btn-secondary EditMenuItem" data-toggle="modal" data-target="#MenuItemModal" data-id="@item.MenuItemID"><i class="fas fa-external-link-alt"></i></button>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TitleExtra)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            <button class="btn btn-secondary MoveUpDown" data-toggle="popover" data-trigger="focus" title="Drag To Re-Order" data-content="Drag with your mouse or finger to re-order menu items"><i class="fas fa-sort"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>