@page "{id:int?}"
@model BellsFishShop.Pages.MenuItemData.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MenuItem</h4>
<hr />
<div class="row">
    <div class="col-md" id="MenuItemForm">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MenuItem.MenuItemID" />

            <div class="row">
                <div class="col-md">
                    <div class="form-group row">
                        <label asp-for="MenuItem.MenuCategoryID" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <select asp-for="MenuItem.MenuCategoryID" class="form-control" asp-items="ViewBag.MenuCategoryID">
                                <option value="" hidden disabled>Please select...</option>
                            </select>
                            <span asp-validation-for="MenuItem.MenuCategoryID" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md">
                    <div class="form-group row">
                        <label asp-for="MenuItem.Title" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="MenuItem.Title" class="form-control" />
                            <span asp-validation-for="MenuItem.Title" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md">
                    <div class="form-group row">
                        <label asp-for="MenuItem.TitleExtra" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input asp-for="MenuItem.TitleExtra" class="form-control" />
                            <span asp-validation-for="MenuItem.TitleExtra" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md">
                    <div class="form-group row">
                        <label asp-for="MenuItem.Description" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <textarea asp-for="MenuItem.Description" class="form-control"></textarea>
                            <span asp-validation-for="MenuItem.Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md">
                    <div class="form-group row">
                        <label asp-for="MenuItem.Price" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">&pound;</div>
                                </div>
                                <input asp-for="MenuItem.Price" class="form-control" />
                            </div>
                            <span asp-validation-for="MenuItem.Price" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            @*<div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>*@
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
